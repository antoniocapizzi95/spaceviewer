pipeline {
    agent {
        docker {
            image 'antoniocapizzi95/node-python:v1.0'
            args '-p 3001:3001 --name staging'
            }
        }
        environment {
                CI = 'true'
            }
        stages {
            stage('Build') {
                steps {
                    sh 'npm install'
                    sh 'chmod -R 777 jenkins'
                    //slackSend color: 'good', message: 'Build done'
                }
            }
             stage('Test') {
                steps {
                    sh './jenkins/scripts/test.sh'
                }
             }
             stage('Deliver') {
                         steps {
                             sh './jenkins/scripts/deliver_staging.sh'
                             input message: 'Finished using the web site? (Click "Proceed" to continue)', id: 'stagingJob'
                             sh './jenkins/scripts/kill.sh'
                         }
                     }
        }
}